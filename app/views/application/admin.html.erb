<div class="container">
  <div class="row">
    <div class="col-md-6">
    <div class="col-md-12">
      <%= link_to "Факультеты", faculties_path %>    
    </div>
    <div class="col-md-12">
      <%= link_to "Кафедры", departments_path %>    
    </div>
    <div class="col-md-12">
      <%= link_to "Группы", groups_path %>    
    </div>
    </div>
    <div class="col-md-6">
    <div class="col-md-12">
      <div id='change_pwd' style="color:#555;cursor:pointer;user-select:none" class="text-right">Сменить пароль</div>
    </div>
    <div class="col-md-12">
