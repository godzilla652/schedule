              <%= select_tag "delete_clock_id", options_for_select(@clocks), {include_blank: 'Выбрать время', class: 'form-control'} %>
            </div>
          </div>
          
          <hr style="width:90%"/>
          <div class="row extended" style="padding: 0 25px;">
            <div class="col-md-6" style="display:flex;flex-direction:column;justify-content:center;align-items:flex-start">
              <div>
                <%= radio_button_tag 'delete_parz', 'even' %><span class="inactive" id="delete_parz_even_label">Парные</span>
              </div>
              <div>
                <%= radio_button_tag 'delete_parz', 'odd' %><span class="inactive" id="delete_parz_odd_label">Непарные</span>
              </div>
            </div>
            <div class="col-md-6" style="display:flex;justify-content:flex-end;align-items:center">
              <button id="delete_flush" class="btn btn-warning">Очистить</button>
            </div>
          </div>
          <hr style="width:90%"/>
            

          <div class="row">
            <div class="col-md-12">
              <%= submit_tag 'Удалить', class: 'form-control btn btn-danger'%>
            </div>
          </div>
          


          <div class="row centered">
            <div class="col-md-10 text-center notice">
              <%= flash[:delete_success] %>
            </div>
            <div class="col-md-10 text-center error">
              <%= flash[:delete_error] %>
            </div>
          </div>
          <% end %>

        </div>
      </div>
      </div>  
        </div>
      
      </div>
</div>

<script>
flush.onclick = function(e){
  e.preventDefault()
  parz_even.checked = false
  parz_odd.checked = false
}

parz_even_label.onclick = function(){
  parz_even.checked = true
}
parz_odd_label.onclick = function(){
  parz_odd.checked = true
}

let spans = [...document.querySelectorAll('.modulus')]
spans.map(item => {
  item.onclick = function(){
    item.previousSibling.checked ? item.previousSibling.checked = false : item.previousSibling.checked = true
    
  }
})


faculty_id.onchange = function(){
    let faculty_id = this.value
    if (faculty_id && faculty_id != ''){
        fetch("<%= root_url %>" + `get_departments_by_faculty?faculty_id=${faculty_id}`)
            .then(response => response.json())
            .then(data => data.map(department => {

                let select = document.getElementById('group_id')
                let l = select.children.length
                if (l > 1){
                    for(let i = 1; i < l; i++){
                        select.children[i].remove()
                    }
                }
                
                select = document.getElementById('department_id')
                l = select.children.length
                if (l > 1){
                    for(let i = 1; i < l; i++){
                        select.children[i].remove()
                    }
                }
                
                let option = document.createElement("option")
                option.text = department.name
                option.value = department.id
                department_id.add(option)
            }))
    }
    else{
      let select = document.getElementById('group_id')
        let l = select.children.length
        if (l > 1){
            for(let i = 1; i < l; i++){
                select.children[i].remove()
            }
        }
        
        select = document.getElementById('department_id')
        l = select.children.length
        if (l > 1){
            for(let i = 1; i < l; i++){
                select.children[i].remove()
            }
        }
        
    }
}
department_id.onchange = function(){
    let department_id = this.value
    if (department_id && department_id != ''){
        fetch("<%= root_url %>" + `get_groups_by_department?department_id=${department_id}`)
            .then(response => response.json())
            .then(data => data.map(group => {
                let option = document.createElement("option")
                option.text = `${group.name}${group.number}`
                option.value = group.id
                group_id.add(option)
            }))
    }
    else{
        let select = document.getElementById('group_id')
        let l = select.children.length
        if (l > 1){
            for(let i = 1; i < l; i++){
                select.children[i].remove()
            }
        }
        
    }
}

change_pwd.onclick = function(){
  var pwd = prompt("Введите новый пароль")
    if (pwd != null) {
      fetch("<%= root_url %>" + `set_new_pwd`, {
        method: 'POST',
        headers: {'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content, 'Content-Type':'application/json'},
        body: JSON.stringify({password: pwd}),
      }).then(data => data.text()).then(text => {
        
        let item = document.getElementById('pwd_status')
        item.textContent = text
      })

//    fetch("<%= root_url %>" + `set_new_pwd`, {password: pwd}).then(data => data.text()).then(text => console.log('asdsd'))
    } 
}




